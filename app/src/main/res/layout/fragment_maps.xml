<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        tools:context="jp.north.mt.maptestapp.MapsFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/regist_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="登録" />

        <TextView
            android:id="@+id/textView_latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_button"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_latitude"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
